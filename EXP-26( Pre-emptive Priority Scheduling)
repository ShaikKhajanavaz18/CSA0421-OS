#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);
    int a[n], b[n], p[n], r[n], c[n], tat[n], wt[n], i, t = 0, done = 0;

    for(i=0;i<n;i++){
        scanf("%d %d %d", &a[i], &b[i], &p[i]);
        r[i] = b[i];
    }

    while(done < n){
        int idx = -1, pr = 9999;
        for(i=0;i<n;i++)
            if(a[i] <= t && r[i] > 0 && p[i] < pr){
                pr = p[i];
                idx = i;
            }
        if(idx == -1){ t++; continue; }
        r[idx]--; t++;
        if(r[idx] == 0){
            done++;
            c[idx] = t;
            tat[idx] = c[idx] - a[idx];
            wt[idx] = tat[idx] - b[idx];
        }
    }

    printf("PID\tAT\tBT\tP\tCT\tTAT\tWT\n");
    for(i=0;i<n;i++)
        printf("P%d\t%d\t%d\t%d\t%d\t%d\t%d\n",
               i+1, a[i], b[i], p[i], c[i], tat[i], wt[i]);
    return 0;
}

OUTPUT:
PID	AT	BT	P	CT	TAT	WT
P1	0	5	2	12	12	7
P2	1	3	1	4	3	0
P3	2	4	3	8	6	2
