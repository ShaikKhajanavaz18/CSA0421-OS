#include <stdio.h>

int findLRU(int time[], int n){
    int i, min = time[0], pos = 0;
    for(i = 1; i < n; i++)
        if(time[i] < min) { min = time[i]; pos = i; }
    return pos;
}

int main() {
    int pages[20], frame[10], time[10];
    int n, f, i, j, pos, faults = 0, counter = 0;

    printf("Enter no. of pages: ");
    scanf("%d", &n);

    printf("Enter page reference string: ");
    for(i = 0; i < n; i++) scanf("%d", &pages[i]);

    printf("Enter no. of frames: ");
    scanf("%d", &f);

    for(i = 0; i < f; i++) frame[i] = -1;

    for(i = 0; i < n; i++) {
        int hit = 0;
        for(j = 0; j < f; j++)
            if(frame[j] == pages[i]) { hit = 1; time[j] = ++counter; }

        if(!hit) {
            for(j = 0; j < f; j++)
                if(frame[j] == -1) { frame[j] = pages[i]; time[j] = ++counter; faults++; hit = 1; break; }

            if(!hit) {
                pos = findLRU(time, f);
                frame[pos] = pages[i];
                time[pos] = ++counter;
                faults++;
            }
        }
    }

    printf("Total Page Faults = %d\n", faults);
    return 0;
}
OUTPUT:
Total Page Faults = 6
