#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/stat.h>
#include <dirent.h>

int main() {
    int fd, flags;
    struct stat fileStat;
    DIR *dir;
    struct dirent *entry;

     printf("Opening file demo.txt...\n");
    fd = open("demo.txt", O_CREAT | O_RDWR, 0644);

     flags = fcntl(fd, F_GETFL);
    printf("File flags: %d\n", flags);

     lseek(fd, 0, SEEK_END);
    printf("File pointer moved to end.\n");

     stat("demo.txt", &fileStat);
    printf("File size: %ld bytes\n", fileStat.st_size);

     printf("Opening current directory...\n");
    dir = opendir(".");
    printf("Directory entries:\n");
    while ((entry = readdir(dir)) != NULL)
        printf("  %s\n", entry->d_name);

     close(fd);
    closedir(dir);
    printf("File and directory closed.\n");

    return 0;
}
OUTPUT:
Opening file demo.txt...
File flags: 66
File pointer moved to end.
File size: 0 bytes
Opening current directory...
Directory entries:
  .
  ..
  demo.txt
  otherfile.c
File and directory closed.
