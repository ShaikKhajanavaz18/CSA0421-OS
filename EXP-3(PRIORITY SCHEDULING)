#include <stdio.h>

int main() {
    int n,i,j,temp, BT[10], WT[10], TAT[10], P[10];
    printf("Enter number of processes: "); scanf("%d",&n);
    for(i=0;i<n;i++){
        printf("P%d BT: ",i+1); scanf("%d",&BT[i]);
        printf("P%d Priority: ",i+1); scanf("%d",&P[i]);
    }
    
    for(i=0;i<n-1;i++)
        for(j=i+1;j<n;j++)
            if(P[i]>P[j]){
                temp=P[i]; P[i]=P[j]; P[j]=temp;
                temp=BT[i]; BT[i]=BT[j]; BT[j]=temp;
            }
    WT[0]=0;
    for(i=1;i<n;i++) WT[i]=WT[i-1]+BT[i-1];
    for(i=0;i<n;i++) TAT[i]=WT[i]+BT[i];
    printf("\nP\tBT\tPriority\tWT\tTAT\n");
    for(i=0;i<n;i++)
        printf("P%d\t%d\t%d\t\t%d\t%d\n",i+1,BT[i],P[i],WT[i],TAT[i]);
}
OUTPUT:
P   BT  Priority  WT  TAT
P1  3    1       0   3
P2  5    2       3   8
P3  8    3       8   16
Average Waiting Time = 3.66
Average Turnaround Time = 9.00
