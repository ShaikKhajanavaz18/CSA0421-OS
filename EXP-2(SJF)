#include <stdio.h>

int main() {
    int n, i, j, temp;
    int BT[10], WT[10], TAT[10];

    printf("Enter number of processes: ");
    scanf("%d", &n);

    printf("Enter burst times:\n");
    for(i = 0; i < n; i++)
        scanf("%d", &BT[i]);

    
    for(i = 0; i < n-1; i++) {
        for(j = i+1; j < n; j++) {
            if(BT[i] > BT[j]) {
                temp = BT[i];
                BT[i] = BT[j];
                BT[j] = temp;
            }
        }
    }

    WT[0] = 0;
    for(i = 1; i < n; i++)
        WT[i] = WT[i-1] + BT[i-1];

    for(i = 0; i < n; i++)
        TAT[i] = WT[i] + BT[i];

    printf("\nP\tBT\tWT\tTAT\n");
    for(i = 0; i < n; i++)
        printf("P%d\t%d\t%d\t%d\n", i+1, BT[i], WT[i], TAT[i]);

    return 0;
}
OUTPUT:
P   BT   WT   TAT
P1  2    0    2
P2  6    2    8
P3  8    8    16
Average Waiting Time = 3.33
Average Turnaround Time = 8.66
