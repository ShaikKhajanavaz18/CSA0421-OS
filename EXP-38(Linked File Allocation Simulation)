#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, i, j;
    printf("Enter number of files: ");
    scanf("%d", &n);

    int total_blocks = 20;
    int block[total_blocks];
    for(i=0;i<total_blocks;i++) block[i]=0;

    for(i=0;i<n;i++){
        int size;
        printf("Enter size of file %d: ", i+1);
        scanf("%d", &size);
        int file_blocks[size];

        printf("Enter blocks for file %d:\n", i+1);
        for(j=0;j<size;j++){
            int b; scanf("%d",&b);
            if(block[b]==0){ block[b]=1; file_blocks[j]=b; }
            else { printf("Block already allocated!\n"); exit(0); }
        }

        printf("File %d -> Blocks: ", i+1);
        for(j=0;j<size;j++) printf("%d -> ", file_blocks[j]);
        printf("NULL\n");
    }

    return 0;
}

OUTPUT:
File 1 -> Blocks: 2 -> 5 -> 7 -> NULL
File 2 -> Blocks: 10 -> 12 -> NULL
