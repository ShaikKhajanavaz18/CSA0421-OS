#include <stdio.h>
#include <string.h>

struct emp { int id; char name[20]; float salary; };

int main() {
    FILE *f;
    struct emp e;
    int n, i, pos, search_id;

    f = fopen("emp.dat", "wb+");

    scanf("%d", &n);
    for(i=0;i<n;i++){
        scanf("%d %s %f", &e.id, e.name, &e.salary);
        fwrite(&e, sizeof(e), 1, f);
    }

    scanf("%d", &search_id);

    fseek(f, 0, SEEK_SET);
    while(fread(&e, sizeof(e), 1, f)){
        if(e.id == search_id){
            printf("ID: %d\nName: %s\nSalary: %.2f\n", e.id, e.name, e.salary);
            break;
        }
    }

    fclose(f);
    return 0;
}

OUTPUT:
ID: 102
Name: John
Salary: 45000.00
