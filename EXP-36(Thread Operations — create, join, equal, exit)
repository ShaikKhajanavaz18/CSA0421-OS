#include <stdio.h>
#include <pthread.h>
#include <unistd.h>
#include <stdlib.h>

void* fun(void* arg){
    printf("Thread running: %ld\n", pthread_self());
    pthread_exit((void*)arg);
}

int main() {
    pthread_t t1, t2;
    void *ret1, *ret2;

    pthread_create(&t1, NULL, fun, (void*)1);
    pthread_create(&t2, NULL, fun, (void*)2);

    pthread_join(t1, &ret1);
    pthread_join(t2, &ret2);

    printf("Thread 1 returned: %ld\n", (long)ret1);
    printf("Thread 2 returned: %ld\n", (long)ret2);

    if(pthread_equal(t1,t2)) printf("Threads are equal\n");
    else printf("Threads are not equal\n");

    printf("Main thread exiting\n");
    pthread_exit(NULL);
}

OUTPUT:
Thread running: 140253492034560
Thread running: 140253483641856
Thread 1 returned: 1
Thread 2 returned: 2
Threads are not equal
Main thread exiting
